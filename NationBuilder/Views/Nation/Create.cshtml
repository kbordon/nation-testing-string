@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using NationBuilder.ViewModels

@model CreateViewModel

<h2>Build your nation!</h2>
<hr/>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)

    @Html.LabelFor(model => model.GovId)
    @Html.DropDownListFor(model => model.GovId, new SelectList(new List<Object>{
                                                    new { value = 0, text ="Anarchy"},
                                                    new { value = 1, text ="Oligarchy"},
                                                    new { value = 2, text ="Matriarchy"},
                                                    new { value = 1, text ="Patriarchy"},
                                                    new { value = 1, text ="Democracy"},
                                                    new { value = 1, text ="Piracy"}
                                                    },
                                                    "value",
                                                    "text"
                                                )
                        )

}